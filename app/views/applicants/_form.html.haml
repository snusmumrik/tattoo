= form_for @applicant do |f|
  - if @applicant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@applicant.errors.count, "error")} prohibited this applicant from being saved:"
      %ul
        - @applicant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :kana
    = f.text_field :kana
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
